{
  "name": "v4l1d",
  "version": "1.0.3",
  "description": "Minimalistic library for complex objects and arrays validation.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "pretest": "npm run build",
    "test": "mocha --require @babel/register",
    "clean": "rm -rf ./dist",
    "clean:tmp": "rm -rf ./dist/.tmp",
    "compile": "babel src -d dist/.tmp",
    "bundle": "browserify dist/.tmp/index.js -o dist/index.js -s v4l1d",
    "build": "npm run clean && npm run compile && npm run bundle && npm run clean:tmp",
    "lint": "eslint .",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yukhnevych/v4l1d.git"
  },
  "author": "Serhii Yukhnevych <s.yukhnevych@gmail.com>",
  "keywords": [
    "v4l1d",
    "validator",
    "validation",
    "validate",
    "valid",
    "check"
  ],
  "license": "MIT",
  "dependencies": {
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-minify": "^0.5.0",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "mocha": "^5.2.0"
  }
}
